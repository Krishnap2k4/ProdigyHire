    />
  </head>

  <body>
    <div class="row m-3">
      <div class="col">
        <form id="myform" name="myform">

        <div class="d-flex justify-content-between mb-2 bg-dark rounded p-2">
          <div class="col-12 w-25">
            <label class="visually-hidden" for="inlineFormSelectPref"
              >Preference</label
            >
            <select class="form-select" name="lang" id="lang">
              <option selected>Choose...</option>
              <option value="C">C</option>
              <option value="Cpp">Cpp</option>
              <option value="JavaScript">JavaScript</option>
              <option value="Java">Java</option>
              <option value="Python">Python</option>
          </select>
          
          </div>
          <div>
            <button type="button" class="btn btn-success">Coding Sprint</button>
            <button
              type="button"
              value="Submit"
              onclick="compileCode()"
              class="btn btn-success"
            >
              <i class="bi bi-play-fill"></i>
            </button>
          </div>
        </div>
        <textarea
          type="text"
          id="code"
          name="code"
          class="form-control"
          aria-label="First name"
          style="height: 600px"
        ></textarea>
      </div>
      <div class="col d-flex flex-column rounded bg-dark px-4">
        <label style="color: white">Compile With Input :</label>
        <label for="inputRadioTrue" style="color: white;">
          <input type="radio" name="inputRadio" id="inputRadioTrue" value="true" />Yes
      </label>
      <label for="inputRadioFalse" style="color: white;">
          <input type="radio" name="inputRadio" id="inputRadioFalse" value="false" checked />No
      </label>
      <br />
        <div class="h-50">
          <label for="Input" class="text-light mt-2 mb-2">Input</label>
          <textarea
            type="text"
            id="input"
            name="input"
            class="form-control h-75"
            aria-label="Last name"
          ></textarea>
        </div>
        <div class="h-50">
          <label for="Output" class="text-light mb-2">Output</label>
          <textarea
            type="text"
            id="output"
            name="output"
            class="form-control h-75"
            aria-label="Last name"
          ></textarea>
        </div>
      </form>
      </div>
    </div>

    <script>
      function compileCode() {
        var code = document.getElementById("code").value;
        var input = document.getElementById("input").value;
        var lang = document.getElementById("lang").value;
        var compileWithInput = document.querySelector(
          'input[name="inputRadio"]:checked'
        ).value;

        var xhr = new XMLHttpRequest();
        xhr.onreadystatechange = function () {
          if (xhr.readyState == 4 && xhr.status == 200) {
            document.getElementById("output").value = xhr.responseText;
          }
        };
        xhr.open("POST", "compilecode", true);
        xhr.setRequestHeader(
          "Content-type",
          "application/x-www-form-urlencoded"
        );
        xhr.send(
          "code=" +
            encodeURIComponent(code) +
            "&input=" +
            encodeURIComponent(input) +
            "&lang=" +
            lang +
            "&inputRadio=" +
            compileWithInput
        );
      }
    </script>
  </body>
</html>

