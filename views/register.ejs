<div class="model">
    <!-- Login modal -->
    <div id="login-modal">
      <!-- Login Form -->
      <div class="login-form default-form">
        <div class="form-inner">
          <h3>Create a Free ProdigyHire Account</h3>
  
          <!--Login Form-->
          <% if (message.length > 0) { %>
            <div class="alert alert-danger">
              <%= message %>
            </div>
          <% } %>
          <form method="post" action="/register">
            <div class="form-group">
              <div class="btn-box row">
                <div class="col-lg-6 col-md-12">
                  <label><input type="radio" value="candidate" name="role" required> Candidate </label>
              </div>
              <div class="col-lg-6 col-md-12">
                  <label><input type="radio" value="employer" name="role" required> Employer </label>
              </div>
              </div>
            </div>
  
            <div class="form-group">
              <label>Username</label>
              <input type="text" minlength="4" name="username" placeholder="Username" required>
            </div>
            <div class="form-group">
              <label>Email Address</label>
              <input type="email" name="email" placeholder="Email" required>
            </div>
  
            <div class="form-group">
              <label>Password</label>
              <input id="password-field" minlength="6" type="password" name="password" value="" placeholder="Password">
            </div>
  
            <div class="form-group">
              <button class="theme-btn btn-style-one " type="submit" name="Register">Register</button>
            </div>
          </form>
  
          <div class="bottom-box">
            <div class="divider"><span>or</span></div>
            <div class="btn-box row">
              <div class="col-lg-6 col-md-12">
                <a href="#" class="theme-btn social-btn-two facebook-btn"><i class="fab fa-facebook-f"></i> Log In via Facebook</a>
              </div>
              <div class="col-lg-6 col-md-12">
                <a href="#" class="theme-btn social-btn-two google-btn"><i class="fab fa-google"></i> Log In via Gmail</a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!--End Login Form -->
    </div>
    <!-- End Login Module -->

  </div>